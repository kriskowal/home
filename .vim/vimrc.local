" For local terminals (as opposed to over ssh)
set mouse=a
if !has("nvim")
    set term=xterm-256color
endif
" color khazad256
colorscheme hybrid " from vim-hybrid
" this makes it use the system clipboard
" whenever yanking to the "unnamed" register.
set clipboard=unnamed
set ttyfast
set autoindent
set showmode
set showcmd
set visualbell
